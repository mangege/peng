
  <div class="group">
    <%= f.label :username, "名称", :class => :label %>
    <%= f.text_field :username, :class => 'text_field' %>
    <span class="description">登陆名</span>
  </div>

  <div class="group">
    <%= f.label :password, "密码", :class => :label %>
    <%= f.text_field :password, :class => 'text_field' %>
    <span class="description">登陆密码</span>
  </div>

  <div class="group">
    <%= f.label :role, "角色", :class => :label %>
    <%= f.select(:role, [['请选择',''],*User::ROLES]) %>
    <span class="description">别选错</span>
  </div>

  <div class="group">
    <%= f.label :store_id, "门店", :class => :label %>
    <%= f.select( :store_id,select_store_all) %>
    <span class="description">管理员和来宾不用选择门店</span>
  </div>

  <div class="group">
    <%= f.label :other, "备注", :class => :label %>
    <%= f.text_field :other, :class => 'text_field' %>
    <span class="description">可不填</span>
  </div>
        
<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/icons/tick.png", :alt => "保存") %> 保存
  </button>
  <span class="text_button_padding">或</span>
	<%= link_to "取消", users_path, :class => "text_button_padding link_button" %>
</div>