<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <% if @current_date.month==Date.current.month %>
      <li class="first active"><%= link_to "查看当月", :action => :list_month  %></li>
      <li><%= link_to "查看上月", :action => :list_month,:month=>"prev" %></li>
      <% else %>
       <li class="first"><%= link_to "查看当月", :action => :list_month  %></li>
      <li class="active"><%= link_to "查看上月", :action => :list_month,:month=>"prev" %></li>
      <% end %>
      <li><%= link_to "添加", new_sale_path %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title"><%= "#{@current_date.year}年#{@current_date.month}月 #{@current_user.store.name} 营业额数据" %></h2>
    <div class="inner">
      <table class="table">
        <tr>
          <th class="first">ID</th>
          <th>镶 嵌</th>
          <th>Pt</th>
          <th>黄 金</th>
          <th>K 金</th>
          <th>类 型</th>
          <th>日 期</th>
          <th class="last">当天总额</th>
        </tr>
        <% @sales.each do |sale| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= sale.id %>
          </td>
          <td>
            <%= sale.inlay %>
          </td>
          <td><%= sale.pt %></td>
          <td><%= sale.gold %></td>
          <td><%= sale.kgold %></td>
          <td><%= get_type sale.sale_type %></td>
          <td><%= sale.sale_time %></td>
          <td class="last">
            <%= sale.day %>
          </td>
        </tr>
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>

      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
