<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <% if @current_date.month==Date.current.month %>
      <li class="first active"><%= link_to "查看当月", :action => :list_month  %></li>
      <li><%= link_to "查看上月", :action => :list_month,:month=>"prev" %></li>
      <% else %>
       <li class="first"><%= link_to "查看当月", :action => :list_month  %></li>
      <li class="active"><%= link_to "查看上月", :action => :list_month,:month=>"prev" %></li>
      <% end %>
      <li><%= link_to "添加", new_sale_path %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title"><%= "#{@current_date.year}年#{@current_date.month}月 #{@current_user.store.name} 营业额数据" %></h2>
    <div class="inner">
      <table class="table">
      </table>
      <div class="actions-bar wat-cf" style="text-align:right;">
        <%= render :partial => "footer_sum" %>
      </div>
    </div>
  </div>
</div>
